################################################################################
# PROVIDER
################################################################################

provider "aws" {
  region = "eu-west-2"
}

################################################################################
# EKS
################################################################################

module "eks" {
  source = "../.."

  ## required
  cluster_name = "test"

  ## optional
  create_spot_service_linked_role = false
}

output "eks_cluster_name" {
  value = module.eks.cluster_id
}